BEGIN{

FS=","
OFS="\t"
      printf " Make    Model   Year    Miles   Price\n"
      printf "______________________________________\n"
}

{ 
	if ($1 ~ /chevy/) {
		$1 = "chevrolet"
	}

	if ($1 ~ /plym/) {

		$1 = "plymouth"
	
	}
	print $1,$2,$3,$4,$5

} 

END {
	printf "-------------------\n"
	printf "End of report\n"
	i = 1
	while (i < 10) {
		print "value of i", i
		i = i + 1
	}
}
